<h2>Book a visit</h2>
<form action="/visit" method="post" id="visitform">
  <div class="form-group">
    <label for="exampleInputEmail1">Enter your name</label>
    <input type="text" class="form-control" name="exampleInputEmail1" id="exampleInputEmail1" placeholder="name" value="<%= @name %>">
  </div>
  <div class="form-group">
    <label for="exampleTime">Time of visit</label>
    <input type="text" class="form-control" name="exampleTime" id="exampleTime" placeholder="Time" value="<%= @time %>">
  </div>
  <div class="form-group">
<label for="barber">Choose your barber</label>   
<select name="barber" form="visitform">
  <option value="walter">Walter White</option>
  <option value="jessie">Jessie Pinkman</option>
  <option value="gus">Gus Fring</option>
</select>
	</div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>